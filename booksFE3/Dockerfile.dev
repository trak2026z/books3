# DEV image (FE): Vite + pełne devDependencies + hot reload
FROM node:20-alpine

WORKDIR /app
RUN apk add --no-cache bash

COPY package*.json ./
RUN npm install

# resztę dosunie bind-mount; ale Vite potrzebuje index.html
COPY index.html ./index.html

EXPOSE 5173

# uruchomienie Vite z hostem 0.0.0.0
CMD ["sh", "-lc", "npm run dev -- --host 0.0.0.0"]

